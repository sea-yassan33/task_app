          <%= f.label :Content ,class: "m-1"%>
          <br>
          <%= f.text_area :content ,class: "form-control"%>
        </div>
        <div class="mb-3">
        <%= f.submit "Registration",class: "btn btn-primary" %>
        </div>
      <% end %>
