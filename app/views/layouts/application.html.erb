<!DOCTYPE html>
<html>
  <head>
    <title>TaskApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="py-5 text-center">
        <h2>Task_app</h2>
      </div>
      <ul>
        <li><%= link_to 'Task_index', tasks_path, class: "btn  btn-primary my-2" %></li>
        <li><%= link_to 'New_task', new_task_path, class: "btn  btn-primary my-2" %></li>
      </ul>
    <div>
    <hr>
    <%= yield %>
  </body>
</html>
